{% extends 'layout.twig' %}

{% block body %}
  <div class="box block">
    <div class="is-flex is-justify-content-space-between mb-4">
      <div>
        <h4 class="subtitle is-4"> {{ person.name }} - Contatos </h4>
      </div>

      <div>
        <a href="/people/{{ person.id }}/contacts/new" class="button is-small is-primary">Novo Contato</a>
      </div>
    </div>

    <hr>

    <table class="table is-bordered is-hoverable is-fullwidth">
      <thead>
        <th>Tipo</th>
        <th>Descrição</th>
        <th></th>
      </thead>
      <tbody>
        {% for contact in contacts %}
          <tr>
            <td>{{ contact.type.label }}</td>
            <td>{{ contact.description }}</td>
            <td class="is-flex is-justify-content-flex-end">
              <a href="/contacts/{{ contact.id }}/edit" class="button is-small mr-2">Editar</a>

              <form action="/contacts/{{ contact.id }}" method="POST">
                <input type="hidden" name="_method" value="DELETE">

                <button class="button is-small is-danger" type="submit">Remover</button>
              </form>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
