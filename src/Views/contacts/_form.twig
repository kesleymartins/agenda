{% if formErrors %}
  <div class="message is-danger">
    <div class="message-body">
      {% for error in formErrors %}
        <p>
          <strong>{{ error.propertyPath }}:</strong>
          <span>{{ error.message }}</span>
        </p>
      {% endfor %}
    </div>
  </div>
{% endif %}

<div class="columns">
  <div class="column control">
    <div class="select">
      <select name="type">
        {% for type in types %}
          {% set selected = type.value == contact.type.value ? 'selected' : '' %}

          <option value="{{ type.value }}" {{ selected }}>{{ type.label }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div class="column is-10">
    <div class="control">
      <input class="input" name="description" type="text" placeholder="Descrição" value="{{ contact.description }}"/>
    </div>
  </div>
</div>
