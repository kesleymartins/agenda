{% extends 'layout.twig' %}

{% block body %}
  <div class="card">
    <div class="card-header">
      <div class="card-header-title">Novo Contato</div>
    </div>
    <div class="card-content">
      <form id="form-contact" action="/people/{{ person_id }}/contacts" method="POST">
        {% include '_form.twig' %}
      </form>

      <hr>

      <div class="is-flex is-justify-content-space-between">
        <a href="/people/{{ person_id }}/contacts" class="button">Cancelar</a>
        <button class="button is-primary" type="submit" form="form-contact"> Criar </button>
      </div>
    </div>
  </div>
{% endblock %}
