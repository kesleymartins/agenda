{% extends 'layout.twig' %}

{% block body %}
  <div class="card">
    <div class="card-header">
      <div class="card-header-title">Editar Contato</div>
    </div>
    <div class="card-content">
      <form id="form-contact" action="/contacts/{{ contact.id }}" method="POST">
        <input type="hidden" name="_method" value="PUT">

        {% include '_form.twig' %}
      </form>

      <hr>

      <div class="is-flex is-justify-content-space-between">
        <a href="/people/{{ contact.person.id }}/contacts" class="button">Cancelar</a>
        <button class="button is-primary" type="submit" form="form-contact"> Atualizar </button>
      </div>
    </div>
  </div>
{% endblock %}
