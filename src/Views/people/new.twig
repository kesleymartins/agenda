{% extends 'layout.twig' %}

{% block body %}
  <div class="card">
    <div class="card-header">
      <div class="card-header-title">Nova Pessoa</div>
    </div>
    <div class="card-content">
      <form id="form-person" action="/people" method="POST">
        {% include '_form.twig' %}
      </form>

      <hr>

      <div class="is-flex is-justify-content-space-between">
        <a href="/people" class="button">Cancelar</a>
        <button class="button is-primary" type="submit" form="form-person"> Criar </button>
      </div>
    </div>
  </div>
{% endblock %}
