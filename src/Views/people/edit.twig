{% extends 'layout.twig' %}

{% block body %}
  <div class="card">
    <div class="card-header">
      <div class="card-header-title">Editar Pessoa</div>
    </div>
    <div class="card-content">
      <form id="form-person" action="/people/{{ person.id }}" method="POST">
        <input type="hidden" name="_method" value="PUT">

        {% include '_form.twig' %}
      </form>

      <hr>

      <div class="is-flex is-justify-content-space-between">
        <a href="/people" class="button">Cancelar</a>
        <button class="button is-primary" type="submit" form="form-person"> Atualizar </button>
      </div>
    </div>
  </div>

{% endblock %}
